<!-- Build from @patient instead because a nested route is used for this form -->
<%= form_for([@patient, @appointment]) do |f| %>
  <% if appointment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(appointment.errors.count, "error") %> prohibited this appointment from being saved:</h2>
      <ul>
      <% appointment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="container">
  <form>
    <br>
    <div class="form-group row">
      <%= f.label :firstname, class: 'col-sm-2 form-control-label' %>
    <div class="col-sm-4">
      <%= f.text_field :firstname, class: 'form-control', placeholder:'Enter Firstname' %>
    </div>
    </div>

    <div class="form-group row">
      <%= f.label :lastname, class: 'col-sm-2 form-control-label' %>
    <div class="col-sm-4">
      <%= f.text_field :lastname, class: 'form-control', placeholder:'Enter Lastname' %>
    </div>
    </div>

    <div class="form-group row">
      <%= f.label :birthdate, class: 'col-sm-2 form-control-label' %>
      <div class="col-sm-4">
        <%= f.text_field :birthdate, class: 'form-control', type: 'date', value: '06-12-1991'%>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :address, class: 'col-sm-2 form-control-label' %>
    <div class="col-sm-4">
      <%= f.text_field :address, class: 'form-control', placeholder:'Enter Address' %>
    </div>
    </div>

    <div class="form-group row">
      <%= f.label :telephone, class: 'col-sm-2 form-control-label' %>
    <div class="col-sm-4">
      <%= f.text_field :telephone, class: 'form-control', placeholder:'Enter Phone Number' %>
    </div>
    </div>
    <br>
    <h1>Appointment Date/Time</h1>
    <br>
    <div class="form-group row">
      <%= f.label :time, class: 'col-sm-2 form-control-label' %>
    <div class="col-sm-4">
      <%= f.text_field :time, class: 'form-control', type: 'time', value: '00:00:00' %>
    </div>
    </div>

    <div class="form-group row">
      <%= f.label :date, class: 'col-sm-2 form-control-label' %>
    <div class="col-sm-4">
      <%= f.text_field :date, class: 'form-control', type: 'date' %>
    </div>
    </div>
    <br>
    <div class="form-group row">
      <div class="col-sm-10">
        <%= link_to 'Back', patient_path(@patient), class: 'btn btn-success-outline align' %>
        <%= f.submit 'Add', class: 'btn btn-primary align' %>
      </div>
    </div>
  </form>
  </div>
<% end %>
